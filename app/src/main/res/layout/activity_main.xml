<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="www.markwen.space.irobot_create_2_controller.MainActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/controllerCard"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="8dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end|center_vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/controller"
                android:scaleType="centerCrop"
                android:contentDescription="@string/controller_card_image" />
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/card_gradient"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="end|center_vertical">
                <TextView
                    android:text="@string/controller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Base.DialogWindowTitle.AppCompat"
                    android:textSize="30sp"
                    android:textColor="#ffffff"
                    android:layout_marginEnd="6dp"
                    android:layout_marginRight="6dp" />
            </LinearLayout>
        </FrameLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/robotCard"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="8dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/robot"
                android:scaleType="centerCrop"
                android:contentDescription="@string/controller_card_image" />
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/card_gradient"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="end|center_vertical">
                <TextView
                    android:text="@string/robot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Base.DialogWindowTitle.AppCompat"
                    android:textSize="30sp"
                    android:textColor="#ffffff"
                    android:layout_marginEnd="6dp"
                    android:layout_marginRight="6dp" />
            </LinearLayout>

        </FrameLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
